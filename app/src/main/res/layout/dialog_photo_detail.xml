<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root">


    <com.ansen.shape.AnsenRelativeLayout
        android:layout_width="200dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="60dp"
        app:corners_radius="5dp"
        app:solid_color="@color/white_normal"
        android:elevation="5dp"
        app:elevation="5dp">

        <com.ansen.shape.AnsenImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_download"
            android:elevation="2dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            app:solid_color="@color/body_color"
            app:corners_radius="5dp" />

        <com.ansen.shape.AnsenLinearLayout
            android:id="@+id/ll_download"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            app:solid_color="@color/white_normal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:padding="3dp"
                android:src="@mipmap/icon_download"
                android:elevation="3dp"/>

        </com.ansen.shape.AnsenLinearLayout>
    </com.ansen.shape.AnsenRelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>